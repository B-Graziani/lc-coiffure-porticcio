<section id="service">


<%#= link_to "ajouter une photo", new_article_path  %>
<div class="title-text">
  <p>PHOTOS</p>
  <h1>Quelques moments</h1>




  <% if current_user %>
  <button id="open">Add photo
         </button>

  <div class="pierre_manu" id="pierre_manu">
    <div class="pierre">

      <%= render "shared/form-new-article" %>

      <!--  <button id="close">shit</button> -->
    </div>
  </div>
  <% end %>

</div>




<br>

<div class="articles-box">


<!-- Feature start -->
<ul>
  <% @articles.each do |article| %>
  <div class="single-service">
    <li>
      <% if article.photo.attached? %>
      <%= cl_image_tag article.photo.key, height: 300, width: 400, crop: :fill, gravity: :faces %>
      <%#= cl_image_tag article.photo.key %>
      <% end %>
      <div class="overlay"></div>
      <div class="service-desc">
        <%= majuscule article.title %>
        <hr>
        <%= article.description %>
        <% if current_user %>
        <div id="delete-button"><%= link_to "Supprimer", article ,method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <% end %>
      </div>
      <%#= link_to "delete", article ,method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </div>

  <% end %>
</ul>
<!-- Feature end -->


</div>




</section>

























